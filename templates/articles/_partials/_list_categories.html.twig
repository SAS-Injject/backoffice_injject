{% extends "_partials/_std_table_list.html.twig" %}

{% block ttitle %}Listes des Categories d'Articles{% endblock %}

{% block tfilter %}
<a class="btn filled-main btn-sm" href="{{ path('app_articles') }}">Articles</a>
{% endblock %}

