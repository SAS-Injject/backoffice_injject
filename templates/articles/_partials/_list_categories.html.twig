      <td> #}
      {# {{ article.authors[0].username }} #}
      {# </td> #}
      <td>{{ category.account }}</td>
      <td>          
        <a  
          class="btn-i filled-transparent"
          href="{{ path('app_articles_categories_remove', {'id': category.id}) }}"
          data-remove='{{ category.id }}'
        ><img src="{{ asset('assets/imgs/icons/utilities/remove.svg') }}" alt="" width="15"></a>
      </td>
    </tr>
    {% endfor %}
  {% endif %}
{% endblock %}
